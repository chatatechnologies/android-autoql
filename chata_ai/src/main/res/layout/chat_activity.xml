<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<RelativeLayout
		android:background="@color/chata_drawer_accent_color"
		android:minHeight="?attr/actionBarSize"
		android:paddingEnd="8dp"
		android:paddingStart="8dp"
		android:layout_height="wrap_content"
		android:layout_width="match_parent">
		<ImageView
			android:contentDescription="@null"
			android:id="@+id/ivCancel"
			android:layout_centerVertical="true"
			android:layout_height="24dp"
			android:layout_width="24dp"
			android:src="@drawable/ic_cancel"/>
		<TextView
			android:gravity="center"
			android:layout_centerInParent="true"
			android:layout_height="wrap_content"
			android:layout_toEndOf="@id/ivCancel"
			android:layout_toStartOf="@id/ivClear"
			android:layout_width="match_parent"
			android:text="@string/data_messenger"
			android:textColor="@color/chata_drawer_hover_color"
			android:textSize="18sp"/>
		<ImageView
			android:contentDescription="@null"
			android:id="@+id/ivClear"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:layout_height="24dp"
			android:layout_width="24dp"
			android:src="@drawable/ic_delete"/>
	</RelativeLayout>

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/rvChat"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:layout_width="match_parent"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/tvMsg"
			android:layout_centerHorizontal="true"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="@string/msg_run_autoql"/>
		<ImageView
			android:layout_toStartOf="@id/tvMsg"
			android:layout_centerVertical="true"
			android:contentDescription="@null"
			android:layout_height="20dp"
			android:layout_width="20dp"
			android:src="@drawable/ic_chata"/>
	</RelativeLayout>

	<RelativeLayout
		android:layout_height="40dp"
		android:layout_marginBottom="7dp"
		android:layout_marginEnd="10dp"
		android:layout_marginStart="10dp"
		android:layout_marginTop="7dp"
		android:layout_width="match_parent">
		<AutoCompleteTextView
			android:hint="@string/ask_me_anything"
			android:id="@+id/etQuery"
			android:inputType="text"
			android:layout_height="match_parent"
			android:layout_toStartOf="@id/ivMicrophone"
			android:layout_width="match_parent"
			android:paddingEnd="10dp"
			android:paddingStart="10dp"/>
		<ImageView
			android:contentDescription="@null"
			android:id="@+id/ivMicrophone"
			android:layout_alignParentEnd="true"
			android:layout_height="40dp"
			android:layout_marginStart="10dp"
			android:layout_width="40dp"
			android:src="@drawable/ic_microphone"
			android:padding="10dp"/>
	</RelativeLayout>
</LinearLayout>