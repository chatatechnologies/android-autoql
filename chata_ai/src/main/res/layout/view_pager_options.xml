<?xml version="1.0" encoding="utf-8"?>
<chata.can.chata_ai.view.resize.SplitView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:splitview="http://schemas.android.com/apk/res-auto"
	android:id="@+id/splitView"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="horizontal"
	splitview:handle="@id/handle"
	splitview:primaryContent="@id/llMenu"
	splitview:secondaryContent="@id/rlLocal">
	<LinearLayout
		android:background="@android:color/transparent"
		android:clickable="true"
		android:focusable="true"
		android:gravity="center"
		android:id="@+id/llMenu"
		android:layout_height="match_parent"
		android:layout_width="48dp"
		android:orientation="vertical"
		android:visibility="gone">

		<RelativeLayout
			android:id="@+id/rlChat"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">
			<ImageView
				android:contentDescription="@null"
				android:id="@+id/ivChat"
				android:layout_height="match_parent"
				android:layout_width="56dp"
				android:src="@drawable/ic_side_chat"/>
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/rlTips"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">
			<ImageView
				android:contentDescription="@null"
				android:id="@+id/ivTips"
				android:layout_height="match_parent"
				android:layout_width="56dp"
				android:src="@drawable/ic_side_explore"/>
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/rlNotify"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">
			<ImageView
				android:contentDescription="@null"
				android:id="@+id/ivNotify"
				android:layout_height="match_parent"
				android:layout_width="56dp"
				android:src="@drawable/ic_side_notification"/>
			<TextView
				android:id="@+id/tvNotification"
				android:layout_alignParentEnd="true"
				android:layout_height="10dp"
				android:layout_marginEnd="8dp"
				android:layout_marginTop="12dp"
				android:layout_width="10dp"
				android:visibility="gone"/>
		</RelativeLayout>
	</LinearLayout>

	<View
		android:background="@color/chata_drawer_accent_color"
		android:id="@+id/handle"
		android:layout_height="match_parent"
		android:layout_width="16dp"
		android:visibility="gone"/>

	<RelativeLayout
		android:clickable="true"
		android:focusable="true"
		android:id="@+id/rlLocal"
		android:layout_height="match_parent"
		android:layout_toEndOf="@id/llMenu"
		android:layout_width="match_parent"
		android:visibility="gone">
		<RelativeLayout
			android:background="@color/blue_chata_circle"
			android:id="@+id/toolbar"
			android:layout_height="56dp"
			android:layout_width="match_parent">
			<ImageView
				android:contentDescription="@null"
				android:layout_centerVertical="true"
				android:id="@+id/ivClose"
				android:layout_height="36dp"
				android:layout_marginStart="6dp"
				android:layout_width="36dp"
				android:src="@drawable/ic_cancel"
				android:padding="5dp"/>
			<TextView
				android:gravity="center"
				android:id="@+id/tvTitle"
				android:layout_centerVertical="true"
				android:layout_height="wrap_content"
				android:layout_toEndOf="@id/ivClose"
				android:layout_toStartOf="@id/ivClear"
				android:layout_width="match_parent"
				android:textColor="@color/white"
				android:textSize="18sp"/>
			<ImageView
				android:contentDescription="@null"
				android:id="@+id/ivClear"
				android:layout_alignParentEnd="true"
				android:layout_centerVertical="true"
				android:layout_height="36dp"
				android:layout_marginEnd="6dp"
				android:layout_width="36dp"
				android:src="@drawable/ic_delete"/>
		</RelativeLayout>
		<FrameLayout
			android:background="@color/darken_background_behind"
			android:id="@+id/frmLocal"
			android:layout_height="match_parent"
			android:layout_below="@id/toolbar"
			android:layout_width="match_parent"/>
	</RelativeLayout>
</chata.can.chata_ai.view.resize.SplitView>