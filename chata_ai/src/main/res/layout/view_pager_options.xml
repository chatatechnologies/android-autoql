<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent">
	<LinearLayout
		android:layout_alignParentBottom="true"
		android:background="@android:color/transparent"
		android:clickable="true"
		android:focusable="true"
		android:gravity="center"
		android:id="@+id/llMenu"
		android:layout_height="32dp"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:visibility="gone">

		<RelativeLayout
			android:background="@color/white"
			android:id="@+id/rlChat"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">
			<ImageView
				android:contentDescription="@null"
				android:id="@+id/ivChat"
				android:layout_height="match_parent"
				android:layout_width="56dp"
				android:src="@drawable/ic_chata"
				android:padding="3dp"/>
		</RelativeLayout>

		<RelativeLayout
			android:background="@color/blue_chata_circle"
			android:id="@+id/rlTips"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">
			<ImageView
				android:contentDescription="@null"
				android:id="@+id/ivTips"
				android:layout_height="match_parent"
				android:layout_width="56dp"
				android:src="@drawable/ic_tips"
				android:padding="3dp"/>
		</RelativeLayout>

		<RelativeLayout
			android:background="@color/blue_chata_circle"
			android:id="@+id/rlNotify"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">
			<ImageView
				android:contentDescription="@null"
				android:id="@+id/ivNotify"
				android:layout_height="match_parent"
				android:layout_width="56dp"
				android:src="@drawable/ic_bell"
				android:padding="3dp"/>
		</RelativeLayout>
	</LinearLayout>

	<FrameLayout
		android:background="@android:color/darker_gray"
		android:clickable="true"
		android:focusable="true"
		android:id="@+id/frmLocal"
		android:layout_above="@id/llMenu"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:visibility="gone"/>
</RelativeLayout>