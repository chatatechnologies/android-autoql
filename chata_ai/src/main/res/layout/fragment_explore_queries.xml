<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<data>
		<variable
			name="model"
			type="chata.can.chata_ai.retrofit.ui.viewModel.ExploreQueriesViewModel"/>
	</data>

	<LinearLayout
		android:background="@{model.colorSecondary}"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:id="@+id/llParent">

		<RelativeLayout
			android:descendantFocusability="beforeDescendants"
			android:focusableInTouchMode="true"
			android:id="@+id/llQuery"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:padding="8dp">

			<ImageView
				android:contentDescription="@null"
				android:id="@+id/ivSearch"
				android:layout_alignParentEnd="true"
				android:layout_height="40dp"
				android:layout_width="40dp"
				android:layout_marginEnd="8dp"
				android:layout_marginStart="8dp"
				android:src="@drawable/ic_search"
				android:scaleType="fitCenter"
				app:ovalBackground="@{model.drawableSearch}"/>

			<EditText
				android:background="@{model.drawableQuery}"
				android:hint="@string/explore_queries_hint"
				android:layout_toStartOf="@id/ivSearch"
				android:id="@+id/etQuery"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:paddingLeft="16dp"
				android:paddingTop="8dp"
				android:paddingRight="16dp"
				android:paddingBottom="8dp"
				android:textColor="@{model.textColorPrimary}"
				android:textColorHint="@color/place_holder"
				android:importantForAutofill="no"/>

		</RelativeLayout>

		<!-- region middle LinearLayout -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:weightSum="1"
			android:orientation="vertical">

			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/rvRelatedQueries"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scrollbars="vertical"
				android:visibility="gone"/>

			<RelativeLayout
				android:id="@+id/rlGif"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:visibility="gone">
				<chata.can.chata_ai.view.gif.KGifView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_centerInParent="true"/>
			</RelativeLayout>

			<TextView
				android:gravity="center"
				android:id="@+id/tvMsg1"
				android:layout_marginEnd="8dp"
				android:layout_marginTop="8dp"
				android:layout_marginStart="8dp"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="@string/explore_queries_msg_1"
				android:textColor="@color/text_explore_queries"/>

			<TextView
				android:gravity="center"
				android:id="@+id/tvMsg2"
				android:layout_width="match_parent"
				android:layout_marginEnd="8dp"
				android:layout_marginTop="8dp"
				android:layout_marginStart="8dp"
				android:layout_height="wrap_content"
				android:text="@string/explore_queries_msg_2"
				android:textColor="@color/text_explore_queries"/>

		</LinearLayout>
		<!-- endregion -->

		<LinearLayout
			android:id="@+id/llPager"
			android:layout_height="56dp"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:visibility="gone">

			<TextView
				android:gravity="center"
				android:id="@+id/tvPrevious"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textColor="@{model.accentColor}"
				android:textSize="32sp"
				android:textStyle="bold"/>

			<RelativeLayout
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_width="0dp">
				<TextView
					android:background="@{model.accentColor}"
					android:gravity="center"
					android:id="@+id/tvFirstPage"
					android:layout_height="30dp"
					android:layout_centerInParent="true"
					android:layout_width="wrap_content"
					android:textColor="@{model.textColorPrimary}"
					android:textSize="20sp"
					android:textStyle="bold"/>
			</RelativeLayout>

			<RelativeLayout
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_width="0dp">
				<TextView
					android:gravity="center"
					android:id="@+id/tvCenterPage"
					android:layout_height="30dp"
					android:layout_centerInParent="true"
					android:layout_width="wrap_content"
					android:textColor="@{model.textColorPrimary}"
					android:textSize="20sp"
					android:textStyle="bold"/>
			</RelativeLayout>

			<RelativeLayout
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:layout_width="0dp">
				<TextView
					android:gravity="center"
					android:id="@+id/tvLastPage"
					android:layout_centerInParent="true"
					android:layout_width="wrap_content"
					android:layout_height="30sp"
					android:textColor="@{model.textColorPrimary}"
					android:textSize="20sp"
					android:textStyle="bold"/>
			</RelativeLayout>

			<TextView
				android:gravity="center"
				android:id="@+id/tvNext"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_width="0dp"
				android:text="@string/arrow_right"
				android:textColor="@{model.accentColor}"
				android:textSize="32sp"
				android:textStyle="bold"/>

		</LinearLayout>

	</LinearLayout>
</layout>