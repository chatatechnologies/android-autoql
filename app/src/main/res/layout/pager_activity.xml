<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent">
	<androidx.viewpager.widget.ViewPager
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/viewPager"
		android:layout_height="match_parent"
		android:layout_width="match_parent">
		<com.google.android.material.tabs.TabLayout
			android:id="@+id/tabLayout"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:visibility="gone"
			app:tabMode="scrollable"/>
	</androidx.viewpager.widget.ViewPager>

	<LinearLayout
		android:id="@+id/llMenu"
		android:layout_centerVertical="true"
		android:layout_height="wrap_content"
		android:layout_width="28dp"
		android:orientation="vertical"
		android:visibility="gone">

		<RelativeLayout
			android:background="@color/white"
			android:id="@+id/rlChat"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">
			<ImageView
				android:contentDescription="@null"
				android:id="@+id/ivChat"
				android:layout_width="match_parent"
				android:layout_height="56dp"
				android:src="@drawable/ic_chata"
				android:padding="3dp"/>
		</RelativeLayout>

		<RelativeLayout
			android:background="@color/blue_chata_circle"
			android:id="@+id/rlTips"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">
			<ImageView
				android:contentDescription="@null"
				android:id="@+id/ivTips"
				android:layout_width="match_parent"
				android:layout_height="56dp"
				android:src="@drawable/ic_tips"
				android:padding="3dp"/>
		</RelativeLayout>

		<RelativeLayout
			android:background="@color/blue_chata_circle"
			android:id="@+id/rlNotify"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">
			<ImageView
				android:contentDescription="@null"
				android:id="@+id/ivNotify"
				android:layout_width="match_parent"
				android:layout_height="56dp"
				android:src="@drawable/ic_bell"
				android:padding="3dp"/>
		</RelativeLayout>
	</LinearLayout>

	<FrameLayout
		android:background="@color/borderEditText"

		android:id="@+id/frmLocal"
		android:layout_toEndOf="@+id/llMenu"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:visibility="gone"/>

</RelativeLayout>