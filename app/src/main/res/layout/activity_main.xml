<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

	<data>
		<variable
			name="model"
			type="chata.can.chata_ai_api.retrofit.ui.viewModel.QuoteViewModel"/>
	</data>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<TextView
			android:gravity="center"
			android:id="@+id/tvIncrement"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:text="Incrementar"
			android:textSize="24sp"/>

		<TextView
			android:gravity="center"
			android:id="@+id/tvDecrement"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:text="Decrementar"
			android:textSize="24sp"/>

		<TextView
			android:gravity="center"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Cantidad"
			android:textSize="24sp"/>

		<TextView
			android:gravity="center"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@{String.valueOf(model.manageNum)}"
			android:textSize="24sp"/>

	</LinearLayout>
</layout>

